{
    "manifest_version": 2,
    "name": "Synchronkartei",
    "description": "idk",
    "version": "0.0.1",
    "icons": {
        "64": "icons/icon.png"
    },
    "background": {
        "scripts": [
            "background_script.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.synchronkartei.de/*"
            ],
            "js": [
                "content_script.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": {
            "64": "icons/icon.png"
        },
        "default_popup": "browserAction/index.html",
        "default_title": "Synchronkartei"
    },
    "page_action": {
        "default_icon": {
            "64": "icons/icon.png"
        },
        "default_popup": "pageAction/index.html",
        "default_title": "Synchronkartei"
    },
    "permissions": [ 
        "storage"
    ]
}
